{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2018",
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  
    "lib": [
      "es2015",
      "es2017",
      "esNext.asynciterable"
    ],

    "strict": true
  },

  "include": [
    "./src/**/*.ts"
  ]
}
